<header>
        <div class="container">
            <div class="row">
                <div class="col-sm-7">
                    <div class="header-content">
                        <div class="header-content-inner">
                          <h1>New Registration</h1>
                          <form class="create-update-form" action="/users/create" method="POST">
                            <div class="form-group">
                              <input type="radio" id="usertype" name="usertype" value="R">Reader<br>
                              <input type="radio" id="usertype" name="usertype" value="P">Parent<br>
                              <input type="radio" id="usertype" name="usertype" value="T">Teacher
